{
  "info": {
    "name": "QMS Audit Planning APIs",
    "description": "Comprehensive collection for testing the Quality Management System Audit Planning module",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080/api",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "your_jwt_token_here",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "1. Create Audit Plan",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"ISO 9001:2015 Internal Audit - Q1 2024\",\n  \"scope\": \"Quality Management System audit covering all departments and processes\",\n  \"objectives\": \"Verify compliance with ISO 9001:2015 requirements and identify improvement opportunities\",\n  \"startDate\": \"2024-03-15\",\n  \"endDate\": \"2024-03-20\",\n  \"auditorIds\": [2, 3],\n  \"auditType\": \"INTERNAL\",\n  \"department\": \"Quality Assurance\",\n  \"location\": \"Main Office\",\n  \"notes\": \"Focus on document control and process improvements\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/audits",
          "host": ["{{baseUrl}}"],
          "path": ["audits"]
        }
      }
    },
    {
      "name": "2. Get All Audits",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/audits",
          "host": ["{{baseUrl}}"],
          "path": ["audits"]
        }
      }
    },
    {
      "name": "3. Get Audits with Filters",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/audits?status=PLANNED&auditType=INTERNAL&department=Quality Assurance",
          "host": ["{{baseUrl}}"],
          "path": ["audits"],
          "query": [
            {
              "key": "status",
              "value": "PLANNED"
            },
            {
              "key": "auditType",
              "value": "INTERNAL"
            },
            {
              "key": "department",
              "value": "Quality Assurance"
            }
          ]
        }
      }
    },
    {
      "name": "4. Get Specific Audit",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/audits/1",
          "host": ["{{baseUrl}}"],
          "path": ["audits", "1"]
        }
      }
    },
    {
      "name": "5. Update Audit",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Updated ISO 9001:2015 Internal Audit - Q1 2024\",\n  \"scope\": \"Updated scope description\",\n  \"objectives\": \"Updated objectives\",\n  \"startDate\": \"2024-03-16\",\n  \"endDate\": \"2024-03-21\",\n  \"auditorIds\": [2, 3, 4],\n  \"auditType\": \"INTERNAL\",\n  \"department\": \"Quality Assurance\",\n  \"location\": \"Main Office\",\n  \"notes\": \"Updated notes\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/audits/1",
          "host": ["{{baseUrl}}"],
          "path": ["audits", "1"]
        }
      }
    },
    {
      "name": "6. Update Audit Status",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"IN_PROGRESS\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/audits/1/status",
          "host": ["{{baseUrl}}"],
          "path": ["audits", "1", "status"]
        }
      }
    },
    {
      "name": "7. Update Audit Phase",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phase\": \"EXECUTION\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/audits/1/phase",
          "host": ["{{baseUrl}}"],
          "path": ["audits", "1", "phase"]
        }
      }
    },
    {
      "name": "8. Get Audit Calendar",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/audits/calendar",
          "host": ["{{baseUrl}}"],
          "path": ["audits", "calendar"]
        }
      }
    },
    {
      "name": "9. Get Audit Progress",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/audits/progress",
          "host": ["{{baseUrl}}"],
          "path": ["audits", "progress"]
        }
      }
    },
    {
      "name": "10. Get Audits by Status",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/audits/status/PLANNED",
          "host": ["{{baseUrl}}"],
          "path": ["audits", "status", "PLANNED"]
        }
      }
    },
    {
      "name": "11. Get Overdue Audits",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/audits/overdue",
          "host": ["{{baseUrl}}"],
          "path": ["audits", "overdue"]
        }
      }
    },
    {
      "name": "12. Get Upcoming Audits",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/audits/upcoming",
          "host": ["{{baseUrl}}"],
          "path": ["audits", "upcoming"]
        }
      }
    },
    {
      "name": "13. Search Audits",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/audits?searchTerm=ISO 9001",
          "host": ["{{baseUrl}}"],
          "path": ["audits"],
          "query": [
            {
              "key": "searchTerm",
              "value": "ISO 9001"
            }
          ]
        }
      }
    },
    {
      "name": "14. Filter Overdue Audits",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/audits?isOverdue=true",
          "host": ["{{baseUrl}}"],
          "path": ["audits"],
          "query": [
            {
              "key": "isOverdue",
              "value": "true"
            }
          ]
        }
      }
    },
    {
      "name": "15. Delete Audit",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/audits/1",
          "host": ["{{baseUrl}}"],
          "path": ["audits", "1"]
        }
      }
    }
  ]
}
