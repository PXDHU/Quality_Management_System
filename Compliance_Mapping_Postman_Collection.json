              "raw": "{\n  \"clauseNumber\": \"4.5\",\n  \"clauseName\": \"Updated Test Clause\",\n  \"description\": \"This is an updated test clause for testing purposes\",\n  \"standard\": \"ISO_9001\",\n  \"version\": \"2015\",\n  \"effectiveDate\": \"2015-09-15T00:00:00\",\n  \"category\": \"Testing\",\n  \"riskLevel\": \"MEDIUM\"\n}"
