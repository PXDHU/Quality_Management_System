            "url": {
              "raw": "{{baseUrl}}/api/clauses/search?keyword=context",
              "host": ["{{baseUrl}}"],
              "path": ["api", "clauses", "search"],
              "query": [
                {
                  "key": "keyword",
                  "value": "context"
                }
              ]
            }
          }
        },
        {
          "name": "Search Clauses by Standard and Keyword",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/clauses/search/ISO_9001?keyword=leadership",
              "host": ["{{baseUrl}}"],
