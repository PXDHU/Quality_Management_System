{
  "info": {
    "name": "Compliance Mapping & Clause Management API",
    "description": "Complete Postman collection for testing the Compliance Mapping & Clause Management module APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "jwtToken",
      "value": "your-jwt-token-here",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwtToken}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Clause Library Management",
      "item": [
        {
          "name": "Create New Clause",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"clauseNumber\": \"4.5\",\n  \"clauseName\": \"New Test Clause\",\n  \"description\": \"This is a test clause for testing purposes\",\n  \"standard\": \"ISO_9001\",\n  \"version\": \"2015\",\n  \"effectiveDate\": \"2015-09-15T00:00:00\",\n  \"category\": \"Testing\",\n  \"riskLevel\": \"LOW\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/clauses",
              "host": ["{{baseUrl}}"],
              "path": ["api", "clauses"]
            }
          }
        },
        {
          "name": "Get All Clauses",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/clauses",
              "host": ["{{baseUrl}}"],
              "path": ["api", "clauses"]
